<p id="notice"><%= notice %></p>

<h1>Papers</h1>

<table>
  <thead>
    <tr>
      <th>Format</th>
      <th>Volume</th>
      <th>Type</th>
      <th>Genre</th>
      <th>Cover</th>
      <th>Publisher</th>
      <th>Printing</th>
      <th>Circulation</th>
      <th>Price</th>
      <th>Additional</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @papers.each do |paper| %>
      <tr>
        <td><%= paper.format %></td>
        <td><%= paper.volume %></td>
        <td><%= paper.type %></td>
        <td><%= paper.genre %></td>
        <td><%= paper.cover %></td>
        <td><%= paper.publisher %></td>
        <td><%= paper.printing %></td>
        <td><%= paper.circulation %></td>
        <td><%= paper.price %></td>
        <td><%= paper.additional %></td>
        <td><%= link_to 'Show', paper %></td>
        <td><%= link_to 'Edit', edit_paper_path(paper) %></td>
        <td><%= link_to 'Destroy', paper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Paper', new_paper_path %>
